*/}
<script>
  function initTypewriter() {
    const textElement = document.getElementById("typewriter");
    if (!textElement) return; // Se non trova l'id, si ferma senza rompere il sito

    const phrases = [
      "I am a mathematician in cyber.",
      "I am a curious mind.",
      "I love learning and sharing ideas.",
      "I solve problems through data."
    ];
    
    let phraseIndex = 0;
    let charIndex = 0;
    let isDeleting = false;
    let typeSpeed = 100;

    function type() {
      // Dobbiamo ricontrollare se l'elemento esiste ancora (per i cambi pagina rapidi)
      const currentElement = document.getElementById("typewriter");
      if (!currentElement) return;

      const currentPhrase = phrases[phraseIndex];
      
      if (isDeleting) {
        currentElement.textContent = currentPhrase.substring(0, charIndex - 1);
        charIndex--;
        typeSpeed = 50;
      } else {
        currentElement.textContent = currentPhrase.substring(0, charIndex + 1);
        charIndex++;
        typeSpeed = 100;
      }

      if (!isDeleting && charIndex === currentPhrase.length) {
        isDeleting = true;
        typeSpeed = 2000;
      } else if (isDeleting && charIndex === 0) {
        isDeleting = false;
        phraseIndex = (phraseIndex + 1) % phrases.length;
        typeSpeed = 500;
      }

      setTimeout(type, typeSpeed);
    }

    type();
  }

  // Questo garantisce che funzioni sia al primo avvio che al cambio pagina
  document.addEventListener("astro:page-load", initTypewriter);
</script>
